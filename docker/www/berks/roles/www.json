{
  "name": "webserver",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "The base role for rails web server",

  "run_list": [
    "recipe[nginx::source]"
  ],

  "override_attributes": {
    "nginx": {
      "source": {
        "modules": [
          "http_stub_status_module",
          "http_ssl_module",
          "http_gzip_static_module",
          "passenger"
        ]
      },
      "passenger": {
        "version": "4.0.41",
        "packages": {
          "rhel": ["curl-devel"]
        }
      }
    }
  }
}
